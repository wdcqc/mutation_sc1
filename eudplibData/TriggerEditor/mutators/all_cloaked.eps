function loop32_normal() {
	for(var player = 0; player < 6; player++) {
		if(Bring(player, AtMost, 0, 86, "altar")) {
			RemoveUnit(86, player);
			CreateUnitWithProperties(1, 86, "altar", player, UnitProperty(invincible=True));
